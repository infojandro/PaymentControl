<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaymentControl.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,20" Spacing="20">

            <Image Source="dotnet_bot.png"
                   HeightRequest="150"
                   Aspect="AspectFit"/>

            <CollectionView x:Name="listaUsuarios"
                Margin="0,20,0,0"
                HeightRequest="300">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nombre}" FontSize="18"/>
                            <Label Text="{Binding Alias}" FontSize="14" TextColor="Gray"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label Text="PaymentControl" 
                   FontSize="32"
                   HorizontalOptions="Center"/>

            <Button Text="Usuarios"
                    Clicked="OnUsuariosClicked"
                    HorizontalOptions="Fill"/>

            <Button Text="Cuotas"
                    Clicked="OnCuotasClicked"
                    HorizontalOptions="Fill"/>

            <Button Text="Pagos"
                    Clicked="OnPagosClicked"
                    HorizontalOptions="Fill"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
